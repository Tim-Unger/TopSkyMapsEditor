<Window
    x:Class="TopskyMapsEditor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TopskyMapsEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    AllowsTransparency="True"
    Background="#060606"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Rectangle
                Grid.Column="0"
                Grid.ColumnSpan="1"
                Fill="#101010" />

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Foreground="White"
                Text="TopSky Maps Editor" />

            <Rectangle
                x:Name="DragMoveRect"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Fill="Transparent"
                MouseLeftButtonDown="DragMoveRect_MouseLeftButtonDown" />

            <Button
                x:Name="Close"
                Grid.Column="1"
                Background="#232323"
                Click="Close_Click"
                Content="X"
                Foreground="White" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>

                <Button
                    x:Name="SelectMapButton"
                    Grid.Row="0"
                    Padding="5,5,5,5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#232323"
                    Click="SelectMapButton_Click"
                    Content="Select TopSkyMaps.txt"
                    Foreground="White" />
                <Button
                    x:Name="SelectSctButton"
                    Grid.Row="1"
                    Padding="5,5,5,5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#232323"
                    Click="SelectSctButton_Click"
                    Content="Select SCT"
                    Foreground="White"
                    IsEnabled="False" />
            </Grid>

            <Grid x:Name="MapColumn" Grid.Column="1">
                <TextBlock
                    x:Name="MapPlaceholder"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Select a Map-File to get started"
                    Visibility="Visible" />
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
            </Grid>

            <Grid x:Name="DetailsColumn" Grid.Column="2">
                <TextBlock
                    x:Name="DetailsPlaceholder"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Select a Map to edit Details"
                    Visibility="Visible" />
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Button
                x:Name="Save"
                Padding="50,5,50,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#232323"
                Click="Save_Click"
                Content="Save"
                FontWeight="Bold"
                Foreground="White" />
        </Grid>
    </Grid>
</Window>
